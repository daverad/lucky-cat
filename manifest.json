{
  "manifest_version": 3,
  "name": "Lucky Cat",
  "version": "1.0.0",
  "description": "Revenue forecasting and Apple Search Ads ROI tracking for RevenueCat",
  "default_locale": "en",

  "permissions": [
    "storage",
    "alarms"
  ],

  "host_permissions": [
    "https://app.revenuecat.com/*",
    "https://api.searchads.apple.com/*",
    "https://appleid.apple.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://app.revenuecat.com/*"],
      "js": [
        "utils/format.js",
        "utils/date-utils.js",
        "utils/storage.js",
        "content/dom-parser.js",
        "content/forecasting.js",
        "content/ui-injector.js",
        "content/asa-integration.js",
        "content/content.js"
      ],
      "css": ["styles/styles.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Toggle Lucky Cat Forecast Panel"
  },

  "options_page": "options/options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
